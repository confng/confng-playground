<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="UAT Environment Suite">
    <!-- Set environment via TestNG parameter -->
    <!-- Note: Use 'environment' or 'env' parameter name for automatic config loading -->
    <parameter name="environment" value="uat"/>
    
    <listeners>
        <listener class-name="org.confng.testng.TestNGParameterListener"/>
    </listeners>
    
    <test name="UAT Configuration Tests">
        <classes>
            <class name="org.confng.playground.envloading.EnvironmentAutoLoadingTest"/>
            <class name="org.confng.playground.envloading.CaseInsensitiveKeysTest"/>
            <class name="org.confng.playground.envloading.GlobalConfigTest"/>
        </classes>
    </test>
</suite>

